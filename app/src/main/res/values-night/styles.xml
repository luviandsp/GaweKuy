<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="OnBoardingText" >
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="OnBoardingText.Title" >
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonAuth" >
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="BackButton" >
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/baseline_arrow_back_ios_new_24</item>
    </style>

    <style name="ButtonAuth.Register" >
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="BottomSheetDialogWindow" >
        <item name="android:background">@drawable/bottom_sheet_top_curve</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BottomSheetDialogText" >
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetDialogText.Title" >
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BottomSheetDialogText.Label" >
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="InputText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Divider" >
        <item name="dividerColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="dividerThickness">2dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
        <item name="itemRippleColor">@color/transparent</item>
    </style>

    <style name="optionProfileImage" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="optionProfileDesc" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="optionProfileDivider" >
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SettingDesc" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="CardViewApp" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <style name="SwitchSetting" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="trackDecorationTint">@color/dark_grey</item>
        <item name="trackTint">@color/switch_color</item>"
        <item name="thumbTint">@color/dark_grey</item>
    </style>

    <style name="RadioButtonSetting" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="buttonTint">@color/blue</item>
    </style>
</resources>