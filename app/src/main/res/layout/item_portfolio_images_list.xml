<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_delete_portfolio_images"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:src="@drawable/cross_circle_delete"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_images"
        style="@style/ButtonSelection"
        android:text="@string/select_file" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_file_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:boxCornerRadiusBottomStart="0dp"
        app:boxCornerRadiusTopStart="0dp"
        app:boxStrokeColor="@color/blue"
        app:cursorColor="@color/blue"
        app:hintEnabled="false"
        app:hintTextColor="@color/blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_file_images"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:enabled="false"
            android:hint="@string/no_file_selected"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>