<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            style="@style/Dialog.Title"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center"
            android:text="@string/order_detail"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_order_id"
            style="@style/Dialog.Title"
            app:fontFamily="@font/urbanist_semibold"
            android:textSize="14sp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:longClickable="true"
            android:text="@string/order_id"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/service_name"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_service_name"
                    style="@style/ValueTextStyle"
                    android:text="@string/service_name"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/selected_service"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_selected_service_name"
                    style="@style/ValueTextStyle"
                    android:text="@string/selected_service_name"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/service_price"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_service_price"
                    style="@style/ValueTextStyle"
                    android:text="@string/service_price"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/user_name"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_user_name"
                    style="@style/ValueTextStyle"
                    android:text="@string/user_name"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/user_role"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_user_role"
                    style="@style/ValueTextStyle"
                    android:text="@string/user_role"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/payment_type"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_payment_type"
                    style="@style/ValueTextStyle"
                    android:text="@string/payment_type"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_bank_name"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/bank_name_text"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_bank_name"
                    style="@style/ValueTextStyle"
                    android:text="@string/bank_name_text"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_bank_account_name"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView 
                    style="@style/LabelTextStyle"
                    android:text="@string/bank_account_name"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_bank_account_name"
                    style="@style/ValueTextStyle"
                    android:text="@string/bank_account_name"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_bank_account_number"
                android:visibility="visible"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/bank_account_number"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_bank_account_number"
                    style="@style/ValueTextStyle"
                    android:text="@string/bank_account_number"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_ewallet_type"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/ewallet_type_text"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_ewallet_type"
                    style="@style/ValueTextStyle"
                    android:text="@string/ewallet_type_text"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_ewallet_account_name"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/ewallet_account_name"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_ewallet_account_name"
                    style="@style/ValueTextStyle"
                    android:text="@string/ewallet_account_name"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_ewallet_number"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle"
                    android:text="@string/ewallet_phone_number"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/LabelTextStyle.Colon"
                    android:text="@string/colon"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_ewallet_number"
                    style="@style/ValueTextStyle"
                    android:text="@string/ewallet_phone_number"/>
            </TableRow>
        </TableLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/ButtonAuth.Register"
            android:text="@string/back"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
