<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BottomSheetDialogWindow">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_service_name"
        style="@style/BottomSheetDialogText"
        app:fontFamily="@font/urbanist_semibold"
        android:textSize="20sp"
        android:text="@string/service_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_selected_service_name"
        style="@style/BottomSheetDialogText"
        android:layout_marginBottom="28dp"
        app:fontFamily="@font/urbanist_medium"
        android:textSize="14sp"
        android:text="@string/full_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_price"
            app:fontFamily="@font/urbanist_semibold"/>

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 100.000"
            android:layout_gravity="end"
            android:gravity="end"
            app:fontFamily="@font/urbanist_semibold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_service_price"
            app:fontFamily="@font/urbanist_semibold"/>

        <TextView
            android:id="@+id/tv_app_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 10.000"
            android:layout_gravity="end"
            android:gravity="end"
            app:fontFamily="@font/urbanist_semibold" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        style="@style/optionProfileDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            app:fontFamily="@font/urbanist_bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_total_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 110.000"
            android:layout_gravity="end"
            android:gravity="end"
            app:fontFamily="@font/urbanist_bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pay"
        style="@style/ButtonAuth"
        android:text="@string/pay_service"
        android:layout_marginTop="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"/>

</LinearLayout>